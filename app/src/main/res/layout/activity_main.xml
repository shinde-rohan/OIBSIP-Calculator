<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#605C5C"
        android:textSize="32sp"
        android:hint="00"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:layout_above="@id/output"
        android:paddingEnd="20dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:textSize="65dp"
        android:text=""
        android:gravity="right"
        android:layout_above="@id/buttons"
        android:paddingEnd="20dp"/>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"

        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/clear"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_ac" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_delete" />

            <ImageView
                android:id="@+id/modulo"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_module" />

            <ImageView
                android:id="@+id/divide"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_divide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_7" />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_8" />

            <ImageView
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_9" />

            <ImageView
                android:id="@+id/multiplication"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_multiplication" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_4" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_5" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_6" />

            <ImageView
                android:id="@+id/minus"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_1" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_2" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_3" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_0"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_0" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_dot" />

            <ImageView
                android:id="@+id/equalTo"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_equal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>